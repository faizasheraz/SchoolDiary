doctype html
html
head
title=SchoolDiary
body
	div(class="column" style="text-align:left;margin:auto;float:left;width:20%")
		p Welcome #{username}!
		
		a(href="/createPost") Create a new post
	div(class=column style="text-align:left;margin:auto;float:left;width:60%")
		h1 School Stories!
		each story in stories
			.story
			div(style="margin:10px;background-color:lightgrey;border:1px solid gray;width=50%; padding:10px")
				h3.user #{story.user}
				p.createdAt(style="text-align:left") #{story.createdAt}
				img(src=story.imgurl, class="responsive-image", style="max-width:100%;max-height:100%;object-fit: contain;")
				p.description(style="white-space: pre-wrap") #{story.description}
	div(class=column style="float:left;width=20%")
		a(href="/logout") Logout			
		

